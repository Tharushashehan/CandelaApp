<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lk.candelalearning.candelalearning.InstructionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/upper_lay"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.48"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="58dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/inst_img01" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:text="Practice Paper Grade - 8"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="MCQ"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#ffffff"
                    android:textSize="20sp"


                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:text="Release Date 05 Jan 2018"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/imageView6"
                    android:layout_centerVertical="true"
                    android:text="English Medium"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#8B0000"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="94dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="52dp"
                    android:layout_toEndOf="@+id/textView2"
                    app:srcCompat="@drawable/inst_img07" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lower_lay"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/upper_lay"
                android:layout_weight="1">

            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle"
                android:id="@+id/cardView"
                card_view:cardBackgroundColor="@android:color/transparent">
<RelativeLayout
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_centerHorizontal="true"
    android:background="@drawable/massage_box_rectangle"
    android:radius="10dp"
    app:cardCornerRadius="3dp">
                <LinearLayout
                    android:id="@+id/imageView3LinearLay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:layout_below="@+id/imageView2LinearLay"
                    android:layout_alignEnd="@+id/imageView2LinearLay"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/inst_img02" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="242dp"
                        android:layout_height="match_parent"

                        android:layout_marginStart="20dp"


                        android:text="This test contains multiple-choice types of questions.No marks are awarded for unattempted questions. there is no partial"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imageView4LinearLay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:layout_below="@+id/imageView3LinearLay"
                    android:layout_alignEnd="@+id/imageView2LinearLay">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/inst_img03" />
                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="242dp"
                        android:layout_height="match_parent"

                        android:layout_marginStart="20dp"


                        android:text="Double tap to select an answer. the selectod answer text then will be turn in to red as marked selected"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imageView5LinearLay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:layout_below="@+id/imageView4LinearLay"
                    android:layout_alignEnd="@+id/imageView2LinearLay">
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/inst_img04" />
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="242dp"
                        android:layout_height="match_parent"


                        android:layout_marginStart="20dp"


                        android:text="If you have any doubt about the application or Q/A session feel free to contact us."
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>
</RelativeLayout>
            </android.support.v7.widget.CardView>



                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@color/colorPrimaryDark"
                    android:visibility="visible"
                    app:backgroundTint="@color/colorPrimary"
                    app:borderWidth="0dp"

                    app:fabSize="normal"

                    app:srcCompat="@drawable/baseline_keyboard_arrow_right_white_18dp"
                    tools:layout_conversion_absoluteHeight="56dp"
                    tools:layout_conversion_absoluteWidth="56dp"
                    android:layout_marginEnd="51dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@+id/cardView"
                    android:layout_marginBottom="15dp" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
